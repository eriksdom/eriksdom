<!DOCTYPE html>
<html>
<head>
  <title>Simple Web Browser</title>
  <style>
    body { padding: 25px; font-family: Arial, sans-serif; }
    input[type="text"] { width: 60%; font-size: 16px; }
    button { padding: 8px 16px; font-size: 16px; }
    iframe { width: 100%; height: 500px; border: 1px solid #ccc; margin-top: 18px; border-radius: 8px; }
    #msg { color: red; margin-top: 10px; }
  </style>
</head>
<body>
  <h2>Web Browser Unblocker</h2>
  <input type="text" id="urlInput" placeholder="Enter website URL (e.g., https://example.com)">
  <button onclick="openSite()">Go</button>
  <div id="msg"></div>
  <iframe id="browserFrame"></iframe>
  <script>
    function openSite() {
      const url = document.getElementById('urlInput').value.trim();
      if (!url) {
        document.getElementById('msg').textContent = "Please enter a URL.";
        return;
      }
      // Add protocol if missing
      const finalUrl = url.startsWith('http://') || url.startsWith('https://') ? url : 'https://' + url;
      document.getElementById('browserFrame').src = finalUrl;
      document.getElementById('msg').textContent = "";
    }
  </script>
</body>
</html>
