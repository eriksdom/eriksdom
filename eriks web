<!DOCTYPE html>
<html>
<head>
  <title>Encrypted Web Browser</title>
  <style>
    body { padding: 25px; font-family: Arial, sans-serif; }
    input[type="text"] { width: 60%; }
    iframe { width: 100%; height: 500px; border: 1px solid #ccc; margin-top: 15px; }
  </style>
</head>
<body>
  <h2>Encrypted Web Browser</h2>
  <input type="text" id="urlInput" placeholder="Enter website URL (e.g., https://example.com)">
  <button onclick="encryptAndGo()">Encrypt & Go</button>
  <p id="encryptedUrl"></p>
  <iframe id="browserFrame"></iframe>
  <script>
    // Simple base64 encode/decode (not true "encryption")
    function encrypt(input) {
      return btoa(input);
    }
    function decrypt(input) {
      try {
        return atob(input);
      } catch {
        return "";
      }
    }
    function encryptAndGo() {
      const url = document.getElementById('urlInput').value.trim();
      if (!url) {
        document.getElementById('encryptedUrl').textContent = "Please enter a URL.";
        return;
      }
      const finalUrl = url.startsWith('http://') || url.startsWith('https://') ? url : 'https://' + url;
      const encrypted = encrypt(finalUrl);
      document.getElementById('encryptedUrl').textContent = "Encrypted URL: " + encrypted;
      const decrypted = decrypt(encrypted);
      document.getElementById('browserFrame').src = decrypted;
    }
  </script>
</body>
</html>
